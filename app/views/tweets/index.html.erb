<header>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "ホーム", tweets_path, class: "navbar-brand" %>
      <%= link_to "通知", tweets_path, class: "navbar-brand" %>
      <%= link_to "メッセージ", tweets_path, class: "navbar-brand" %>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "つぶやく", new_tweet_path %></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
    </ul>
</header>

<div class="container">
    <h2>つぶやきクローン</h2>
        <%= link_to "つぶやく", new_tweet_path, class: 'btn btn-default' %> 
        <% @tweets.order('id desc').each do |tweet| %>
        <div class="row">
            <p><%= tweet.content %></p>
            <%= link_to "編集する", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %> 
            <%= link_to "削除する", tweet_path(tweet.id), method: :delete, data: {confirm: 'このつぶやきを本当に削除しますか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
        </div>
        <% end %>
</div>
<div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
